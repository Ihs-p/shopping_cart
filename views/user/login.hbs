<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">

      <h2 class="text-center">Login</h2>
      {{#if loginError}}
      <p class="text-center text-danger">invalid username or password</p>
      {{/if}}
      <form action="/login" method="post">
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" name="Email" placeholder="Enter email" value="habeeb@gmail.com" />
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" name="Password" placeholder="Password" value="1234"/>
        </div>
        <a href="/signup">Create New Account?</a>
        <button type="submit" class="btn btn-primary float-right">Login</button>

      </form>
    </div>
  </div>
</div>