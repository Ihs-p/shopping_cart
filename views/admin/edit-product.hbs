<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 ">
      <div class="row justify-content-center mt-3">
           <h2 class="">Edit Product</h2>
      </div> 
      <form action="/admin/edit-product/{{product.ID}}" method="POST" enctype="multipart/form-data">
      
        <label>Name</label>
        <input type="text" name="Name" class="form-control" placeholder="Name" value="{{product.Name}}">

        <label>Color</label>
        <input type="text" name="Color" class="form-control" placeholder="color" value="{{product.Color}}">

        <label>Price</label>
        <input type="text" name="Price" class="form-control" placeholder="Price" value="{{product.Price}}">

        <label>Image</label>
        <img src="/images/product-images/{{product.Image}}" alt="" style="width: 100px;height:auto" id="proImg" >
        <input type="file" name="Image"  class="form-control" placeholder="image" onchange="changeImage(event)">

        <input type="submit" value="submit" class="btn btn-success mt-4">

      </form>
    </div>
  </div>
</div>
<script>
  function changeImage(event){
    console.log(event)
    document.getElementById("proImg").src = URL.createObjectURL(event.target.files[0])
  }
</script>